<UserControl
    x:Class="WPFRepetition.Views.LeftView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFRepetition.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Command="{Binding CountUpCommand}" Content="Count Up" FontSize="60"/>
            <TextBlock Width="50" Text="{Binding Counter, UpdateSourceTrigger=PropertyChanged}" FontSize="100"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Left">
            <Button Command="{Binding NavigateLeftCommand}" Content="Show Left" FontSize="50"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Right">
            <Button Command="{Binding NavigateRightCommand}" Content="Show Right" FontSize="50"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" />
    </DockPanel>
</UserControl>
